{
    "type": "project",
    "license": "proprietary",
    "require": {
        "skipton-io/base-application": "dev-master"
    },
    "require-dev": {
        "phpmd/phpmd": "2.6.0",	
        "phpspec/phpspec": "^5.1",	
        "squizlabs/php_codesniffer": "3.3.0",	
        "symfony/debug-pack": "*",	
        "symfony/dotenv": "^4.1.*",	
        "symfony/maker-bundle": "^1.0",
        "symfony/profiler-pack": "^1.0",	
        "symfony/test-pack": "^1.0",	
        "symfony/web-server-bundle": "4.1.*"
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "assets:install --symlink --relative %SYMFONY_PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "phpspec run"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "phpspec run"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01C1WBCEBM76QXV77ZB413H3TC",
            "allow-contrib": false
        },
        "symfony-public-dir": "html"
    },
    "repositories": [
        {"type": "composer", "url": "https://repo.packagist.com/skipton-io/"},
        {"packagist.org": false}
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "App\\": "src/"
        },
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
