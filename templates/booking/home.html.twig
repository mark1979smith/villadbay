{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-12">
                <h1 class="display-3">Make your booking</h1>
                <p class="lead">Should you have any questions please don't hesitate to <a href="{{ path('contact') }}">contact us</a>.</p>

                {{ form_start(form) }}

                {{ form_row(form.time_of_arrival) }}
                {{ form_row(form.contact_name) }}
                {{ form_row(form.contact_address) }}
                {{ form_row(form.contact_number) }}
                {{ form_row(form.alternative_contact_number) }}
                {{ form_row(form.fax_number) }}
                {{ form_row(form.email_address) }}
                {{ form_row(form.submit) }}

                {{ form_end(form) }}

            </div>
            <div class="col-sm-12 col-md-3">
                <div class="card">
                    <picture>
                        <source media="(min-width: 768px)"
                                srcset="https://d3orc742w48r4f.cloudfront.net/images/carousel/villa--bedroom-5-md.jpg">
                        <img class="card-img-top" src="https://d3orc742w48r4f.cloudfront.net/images/carousel/villa--bedroom-5-sm.jpg">
                    </picture>
                    <div class="card-body">
                        <h5>Executive Queen Room</h5>

                        <dl class="list-inline">
                            <dt>Amenities include:</dt>
                            <dd class="list-inline-item">Free WI-FI access</dd>
                            <dd class="list-inline-item">Flat screen TV</dd>
                            <dd class="list-inline-item">DVD player</dd>
                            <dd class="list-inline-item">Tea &amp; coffee making facilities</dd>
                        </dl>
                        <dl class="list-inline">
                            <dt>Your guests:</dt>
                            <dd class="list-inline-item">{{ searchData.getAdultCount() }} adult{% if searchData.getAdultCount() > 1 %}s{% endif %}</dd>
                            {% if searchData.getChildCount > 0 %}
                                <dd class="list-inline-item">{{ searchData.getChildCount() }} {% if searchData.getChildCount() == 1 %}child{% else %}children{% endif %}</dd>
                            {% endif %}
                        </dl>
                        <dl class="list-inline">
                            <dt>Your selected dates:</dt>
                            <dd>Check-In: {{ searchData.getDateStart().format('jS F Y') }}</dd>
                            <dd>Check-Out: {{ searchData.getDateEnd().format('jS F Y') }}</dd>
                        </dl>
                    </div>
                    <div class="card-footer text-center">

                        Total price for your stay:
                        <strong>{{ availableData.getPrice() }}</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        label.required:after {
            content: '*';
        }
    </style>
{% endblock %}
