{% extends 'admin.html.twig' %}
{% form_theme form with ['bootstrap_4_horizontal_layout.html.twig'] %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="display-3">Configuration</h1>
                <p class="lead text-danger">Caution must be exercised when modifying entries in here.</p>
                <ul class="list-group">
                    {% for item in existingConfig %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ item.getSlug() }}
                            <span>
                                <span class="badge badge-primary badge-pill">{{ item.getValue() }}</span>
                                <a href="{{ url('admin_config_edit', {slug: item.getSlug()}) }}"><span class="oi oi-pencil"></span></a>
                                {% if is_granted('ROLE_SUPERADMIN') %}
                                    <a class="text-danger" href="{{ url('admin_config_delete', {slug: item.getSlug()}) }}"><span class="oi oi-trash"></span></a>
                                {% endif %}
                            </span>
                        </li>
                    {% endfor %}
                </ul>
                {% if is_granted('ROLE_SUPERADMIN') %}
                    <p class="text-right"><small><a href="{{ url('admin_config_add') }}"><span class="oi oi-plus"></span> Create new entry</a></small></p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
