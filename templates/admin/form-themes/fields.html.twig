{% block CarouselSlideImageType_widget %}
    {% if compound is defined and compound %}
        {%- for child in form %}
            <div class="col-3 float-left">
                <div class="card px-3 pt-3 my-2 mx-0">
                    <img class="card-img-top" src="{{ child.vars.value }}" alt="Card image cap"/>
                    <div class="card-body px-0">
                        {{ form_widget(child, {'label_attr':{'class':'text-truncate col-12 pl-0', 'title': child.vars.label}}) }}
                    </div>
                </div>
            </div>
        {%- endfor %}
    {% endif %}
    <div class="clearfix"><!-- //--></div>
{% endblock CarouselSlideImageType_widget %}
