{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-3">Contact the Villa</h1>
                <p class="lead">Should you have any questions please don't hesitate to contact us.</p>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        label.required:after {
            content: '*';
        }

        #pano {
            background-image: url('https://d3orc742w48r4f.cloudfront.net/images/pano/brisbane.jpg');
            height: 320px !important;
        }

        @media (max-width: 1199px) {
            #pano {
                background-image: url('https://d3orc742w48r4f.cloudfront.net/images/pano/brisbane-lg.jpg');
                height: 320px !important;
            }
        }

        @media (max-width: 991px) {
            #pano {
                background-image: url('https://d3orc742w48r4f.cloudfront.net/images/pano/brisbane-md.jpg');
                height: 381px !important;
            }
        }

        @media (max-width: 767px) {
            #pano {
                background-image: url('https://d3orc742w48r4f.cloudfront.net/images/pano/brisbane-sm.jpg');
                height: 295px !important;
            }
        }

        @media (max-width: 576px) {
            #pano {
                background-image: url('https://d3orc742w48r4f.cloudfront.net/images/pano/brisbane-xs.jpg');
                height: 221px !important;
            }
            .display-1, .display-2, .display-3, .display-4, .display-5 {
                font-size: x-large;
                font-weight: bold;
            }
        }
    </style>
{% endblock %}
